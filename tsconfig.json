{
  "compileOnSave": true,
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": false,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016"],
    "target": "es5"
  },
  "exclude": ["node_modules"]
}
